{
	"name": "dataflow1",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "Inputdataset",
						"type": "DatasetReference"
					},
					"name": "source1"
				}
			],
			"sinks": [],
			"transformations": [
				{
					"name": "aggregate1"
				}
			],
			"scriptLines": [
				"source(output(",
				"          {Order ID} as string,",
				"          {Customer Name} as string,",
				"          Category as string,",
				"          {Sub Category} as string,",
				"          City as string,",
				"          {Order Date} as string,",
				"          Region as string,",
				"          Sales as string,",
				"          Discount as string,",
				"          Profit as string,",
				"          State as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false) ~> source1",
				"source1 aggregate(groupBy(Category),",
				"     Sales = ERROR_FUNCTION('')) ~> aggregate1"
			]
		}
	}
}